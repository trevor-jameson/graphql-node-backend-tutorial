type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  username: String! @unique
  password: String!
  avatarUrl: String
  characters: [Character!]
}

type Character {
  id: ID! @id
  name: String!
  createdAt: DateTime! @createdAt
  user: User!
  spells: [Spell!] @relation(link: TABLE, name: "KnownSpells")
}




type Spell {
  id: ID! @id
  api5eId: String!
  api5eIndex: String!
  name: String!
  description: String!
  highLevel: String!
  page: String!
  range: String!
  components: String!
  ritual: Boolean!
  concentration: Boolean!
  duration: String!
  castingTime: String!
  material: String!
  level: Int!
  school: String!
  klasses: String!
}